@model AppUserLoginDto
@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="mt-4">
    <form asp-controller="Account" asp-action="SignIn" method="post" class="p-4 w-75 mx-auto">
        
        @* kullanıcı adı *@
        <div class="mb-3">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" />
        </div>

        @* şifre *@
        <div class="mb-3">
            <label asp-for="Password"></label>
            <input type="password" asp-for="Password" class="form-control" />
        </div>

        @* beni hatırla *@
        <div class="form-check">
            <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
            <label asp-for="RememberMe" class="form-check-input"></label>
        </div>

        @* buton bölümü *@
        <div class="mb-3 text-end">
            <button type="submit" class="btn btn-outline-primary btn-sm">Giriş</button>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>
    </form>
</div>

