@model List<AdvertisementListDto>
@{
    ViewData["Title"] = "İlan Listesi";
}

<div class="container-fluid">
    @{
        if (Model?.Count>0)
        {
            <div class="text-end my-3 p-1">
                <a asp-controller="Application" asp-action="Create" class="btn btn-outline-success btn-sm">İlan Oluştur</a>
            </div>

            <table class="mt-3 table table-hover table-responsive table-striped">
                <thead>
                    <tr>
                        <th>İlan Adı</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Durumu</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.CreatedDate.ToString("dddd,dd MMMM yyyy")</td>
                            <td>@(item.Status?"Aktif":"Pasif")</td>
                            <td>
                                <a asp-controller="Application" asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">Güncelle</a>
                                <a asp-controller="Application" asp-action="Remove" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        else
        {
            <div class="text-end my-3 p-1">
                <a asp-controller="Application" asp-action="Create" class="btn btn-outline-success btn-sm">İlan Ekle</a>
            </div>
            <div class="mt-3 text-center lead">
                Herhangi bir ilan bulunmamaktadır
            </div>

        }
    }
</div>

